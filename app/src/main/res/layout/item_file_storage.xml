<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/file_storage_item_layout" >
    
    <ImageView
        android:id="@+id/file_storage_thumbnail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp" 
        android:scaleType="fitCenter" />
    
    <TextView
        android:id="@+id/file_storage_filename"
        android:layout_width="225dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/file_storage_thumbnail"
        android:paddingLeft="3dp"
        android:paddingTop="7dp"
        android:singleLine="false" />
    
    <TextView
        android:id="@+id/file_storage_filesize"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/file_storage_thumbnail"
        android:layout_below="@+id/file_storage_filename"
        android:paddingLeft="3dp"
        android:paddingBottom="7dp"
        android:textColor="@color/file_list_second_row" 
        android:textSize="12sp"/>
    
    <ImageView 
        android:id="@+id/file_storage_one_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dot"
        android:layout_toRightOf="@id/file_storage_filesize"
        android:layout_alignTop="@id/file_storage_filesize"
        android:paddingTop="6dp"
        android:paddingLeft="3dp" />
    
    <TextView
        android:id="@+id/file_storage_updated"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/file_storage_one_dot"
        android:layout_below="@+id/file_storage_filename"
        android:paddingLeft="3dp"
        android:paddingBottom="7dp"
        android:textColor="@color/file_list_second_row"
        android:textSize="12sp" />    
</RelativeLayout>

