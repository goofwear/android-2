<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rounded="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/shared_view_item_layout" >
    
    <!-- Item for SHARED FOLDERS -->
    
    <RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:descendantFocusability="blocksDescendants"
	    android:id="@+id/file_share_item_layout" >
    
    <ImageView
        android:id="@+id/file_list_thumbnail_share"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp" 
        android:scaleType="fitCenter"/>
    
    
    <TextView
        android:id="@+id/file_list_filename_share"
        android:layout_width="225dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/file_list_thumbnail_share"
        android:paddingLeft="3dp"
        android:paddingTop="7dp"
        android:ellipsize="end"
        android:maxLines="2"
        />
    
    <TextView
        android:id="@+id/file_list_filesize_share"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/file_list_thumbnail_share"
        android:layout_below="@+id/file_list_filename_share"
        android:paddingLeft="3dp"
        android:paddingBottom="7dp"
        android:textColor="@color/file_list_second_row" 
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLines="1"/>
    
    <ImageButton 
        android:id="@+id/file_list_three_dots_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/action_selector_ic"
		android:background="@null" 
        android:layout_alignTop="@id/file_list_filename_share"
        android:layout_alignParentRight="true"
		android:paddingTop="12dp"
        android:paddingRight="15dp" />
    
    
    <ProgressBar
	    android:id="@+id/transfers_list_bar_share"
		android:layout_width="fill_parent"
		
		android:layout_height="wrap_content" 
		style="@style/MEGAProgressBarTransfers"  
		android:layout_margin="5dip"
		android:paddingRight="5dp" 
        android:layout_toRightOf="@id/file_list_thumbnail_share"
        android:layout_below="@id/file_list_filename_share" /> 
    
    
    </RelativeLayout>
    
